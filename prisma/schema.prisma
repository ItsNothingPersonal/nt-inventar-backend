datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Gegenstand {
  id                      Int           @id @default(autoincrement())
  name                    String        @unique
  beschreibung            String?
  anzahl                  Int
  bild                    String?
  istInKiste              Kiste         @relation(fields: [istInKisteById], references: [id], onDelete: Cascade)
  istInKisteById          Int
  hinzugefuegt            DateTime      @default(now())
  letzteInventur          DateTime      @default(now())
}

model Kiste {
  id                      Int           @id @default(autoincrement())
  name                    String        @unique
  beschreibung            String?
  gegenstaendeInKiste     Gegenstand[] 
  lagerort                Lagerort
  hinzugefuegt            DateTime      @default(now())
  letzteInventur          DateTime      @default(now())
}

enum Lagerort {
  KUNO
  PELLERHAUS  
  FUNDUS
}